{
    "compilerOptions": {
      "target": "es5",
      "lib": ["dom", "esnext"],
      "module": "esnext",
      "moduleResolution": "node",
      "declaration": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": false,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
  }