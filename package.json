{
  "name": "site",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "start": "yarn start-dev",
    "start-prod": "npm-run-all --parallel api-prod admin-api-prod web:prod:serve proxy",
    "start-dev": "yarn prepare-dev && yarn && yarn build && yarn start-dev-fast",
    "start-dev-fast": "npm-run-all --parallel watch admin-api-dev api-dev web proxy",
    "prepare-dev": "yarn workspace api prepare-dev && yarn workspaces foreach run prepare-dev && node prepare.js",
    "native": "cd apps/expo && yarn start",
    "watch": "yarn workspaces foreach -pi run watch",
    "vercel:install": "yarn set version 3.5 && yarn install",
    "web": "cd apps/next && yarn next",
    "web:extract": "DISABLE_EXTRACTION=false yarn workspace next-app dev",
    "web:prod": "yarn workspace next-app build",
    "web:prod:serve": "yarn workspace next-app serve",
    "proxy": "yarn workspace proxy start",
    "admin-api-dev": "yarn workspace admin-api start-dev",
    "admin-api-prod": "yarn workspace admin-api start",
    "api-dev": "yarn workspace api start-dev",
    "api-prod": "yarn workspace api start",
    "add-user": "yarn workspace api add-user",
    "fix": "manypkg fix",
    "postinstall": "yarn check-deps && yarn build",
    "build": "yarn workspaces foreach --exclude next-app run build",
    "upgrade:tamagui": "yarn up '*tamagui*'@latest '@tamagui/*'@latest react-native-web-lite@latest",
    "upgrade:tamagui:canary": "yarn up '*tamagui*'@canary '@tamagui/*'@canary react-native-web-lite@canary",
    "check-deps": "check-dependency-version-consistency ."
  },
  "resolutions": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-refresh": "^0.14.0",
    "react-native-svg": "13.4.0",
    "react-native-web": "^0.18.12"
  },
  "dependencies": {
    "@babel/runtime": "^7.18.9",
    "@manypkg/cli": "^0.19.1",
    "check-dependency-version-consistency": "^3.0.3",
    "eslint": "^8.21.0",
    "node-gyp": "^9.3.1",
    "prettier": "^2.8.1",
    "rimraf": "^5.0.1",
    "turbo": "^1.10.3",
    "typescript": "^5.2.2"
  },
  "packageManager": "yarn@3.5.0",
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
